<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:paddingTop="140dp"
    tools:context=".UI.OwnerDataActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Restaurant Details"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="75dp"/>

    <EditText
        android:layout_width="250dp"
        android:id="@+id/ownerRestaurantName"
        android:layout_gravity="center"
        android:hint="Enter Restaurant's name"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="src_over"
        android:textColorHint="@color/black"
        android:layout_height="40dp"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_width="250dp"
        android:id="@+id/ownerRestaurantLocation"
        android:layout_gravity="center"
        android:hint="Enter Restaurant's Address"
        android:layout_height="40dp"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="src_over"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"/>


    <EditText
        android:layout_width="250dp"
        android:id="@+id/ownerMinAmountPerOrder"
        android:layout_gravity="center"
        android:hint="Enter the minimum amount per Bill"
        android:inputType="number"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="src_over"
        android:textColorHint="@color/black"
        android:layout_height="40dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/ownerDone"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="DONE"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/cardview_dark_background" />

    <ProgressBar
        android:id="@+id/progressOwnerDetails"
        android:layout_width="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

</LinearLayout>